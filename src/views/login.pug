extends layouts/main

block content 
    .form-container
        form(method="post")
            div.row.g-3
                div.col-12
                    label.form-label(for="nickName") NickName
                    input.form-control(type="text", name="nickName", placeholder="NickName", required)

                div.col-12
                    label.form-label(for="password") Password
                    input.form-control(type="password", name="password", placeholder="Password", required)

                input.btn.btn-secondary(type="submit", value="Log In")
            div 
                span Don't have an account?
                a(href="/join") Create one now &rarr;
        include partials/socialLogin

            