extends layouts/main

block content 
    div#videoContainer(data-id=video.id)
        if isHeroku
            video(src=video.fileUrl, width="100%", height="400")
        else 
            video(src="/" + video.fileUrl, width="100%", height="400")
        div#videoControlWidth
            div#videoControls
                i.fas.fa-play#play &nbsp
                i.fas.fa-volume-down#mute &nbsp
                input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
                div 
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
                div
                    input(type="range", step="1", value=0, min="0")#timeline
                p &nbsp
                div 
                    i.fas.fa-expand#fullScreen


    .video__info 
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=routes.editVideo(video.id)) Edit video
            br
            a(href=routes.deleteVideo(video.id)) Delete Video
        div
            h5.video__title=video.title
            small=video.createdAt
        small Uploaded by 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}
        br
        span.video__views #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"}
        p.video__description=video.description
        p=video.hashtags
        
    .video__comments 
        span.video__comment-number #{video.comments.length} #{video.comments.length === 1 ? "comment" : "comments"}
    
    if loggedIn
        .video__comments 
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Comment")
                button Add Comment
    
    .video__comments 
        ul 
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment._id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    if String(comment.owner._id) === String(loggedInUser._id)
                        span#deleteComment ‚ùå

block scripts 
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")