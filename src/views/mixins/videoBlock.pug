mixin videoBlock(video = {})
    .col
        .card.chadow-sm.videoBlock
            if isHeroku
                img.bd-placeholder-img.card-img-top(src=video.thumbUrl, style="background-size:cover;background-position:center;width=100%;height:225px;")
            else
                img.bd-placeholder-img.card-img-top(src=`/${video.thumbUrl}`, style="background-size:cover;background-position:center;width=100%;height:225px;")
            .card-body 
                h2=video.title
                p
                    each hashtag in video.hashtags
                        |#{hashtag}, 
            .d-flex.justify-content-between.align-items-center
                .btn-group
                    button.btn.btn-sm.btn-outline-secondary(onclick=`location.href="${routes.videoDetail(video.id)}"`) View
            small.text-muted #{video.meta.views} views | #{video.createdAt.getFullYear()}. #{video.createdAt.getMonth()}. #{video.createdAt.getDay()}